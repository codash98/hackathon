<% include partials/header %>
<div class="container">
<form class="form-inline" action="/irctcTourism/search" method="POST">
    <div class="form-group">
        <label class="sr-only" for="inputCity">City</label>
        <input id="inputCity" class="form-control" type="text" size="50" placeholder="City" autocomplete="on" required="true">
    </div>
    <div class="form-group">
        <label class="sr-only" for="inputCheckIn">Check In</label>
        <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control" min="2018/04/28" name="checkIn" id="inputCheckIn" placeholder="Check In" required="true">
    </div>
    <div class="form-group">
        <label class="sr-only" for="inputCheckOut">Check Out</label>
        <input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control"  id="inputCheckOut" name="checkOut" placeholder="Check Out" required="true">
    </div>
    <div class="form-group">
    	<label class="sr-only" for="inputGuests">Check Out</label>
		<input id="inputGuests"  type="number" min="1" class="form-control" placeholder="No. of Guests" required="true">
	</div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
</div>
</body>
</html>
<% include partials/footer %>