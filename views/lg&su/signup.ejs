<!-- signup Form -->
<div class="container">
	<div class="row">
		<div class="col-lg-3"></div>

		<div id="loginbox" class="col-lg-6">
			
			<h3 class="text-center">Sign Up</h3>
			<br />
			<form class="" method="post" action="/signup">
				<div class="form-group">
					<label for="name" class="cols-sm-2"><b>Name :</b></label>
					<div class="cols-sm-10">
						<div class="input-group">
							<input type="text" class="form-control" name="name" id="name"  placeholder="Enter your Name" required/>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="email" class="cols-sm-2"><b>Email :</b></label>
					<div class="cols-sm-10">
						<div class="input-group">
							<input type = "text" id="txtEmail" name="email" class="form-control" placeholder="Enter Email"
							required/>
							<hr/>
						</div>
						</div>
					</div>
					<div class="form-group">
						<h6>Enter your post</h6>
						<div class="col-lg-2"></div>
						<select name = "designation" id="railway" class="form-control">
							<option value="0" selected>Railway Employee</option>
							<option value="1">Lok Sabha Member</option>
							<option value="2">Rajya Sabha Member</option>
							<option value="3">Retired Railway Employee</option>
							<option value="4">Other</option>
						</select>
					</div>

					<div class="form-group">
						<label for="railwayID" class="cols-sm-2"><b>Railway ID</b></label>
						<div class="cols-sm-10">
							<div class="input-group">
								<input type="text" class="form-control" name="railwayID" id="railwayID"  placeholder="Enter your EmployeeID" required/>
							</div>
							<p><b>An OTP will be sent to your registered mobile No.</b></p>
						</div>
					</div>
					<div class="form-group">
						<label for="phone_no"><b> Number </b></label>
						<input type="text" name="contact" pattern="^\d{10}$" data-validation="number" mindata-validation-allowing="negative,number" input name="color" data-validation="number" datavalidation-ignore="$" size="10" maxlength="10" required="required" class="form-control" id="phone_no" placeholder="Phone Number"required>
					</div>

					<div class="form-group">
						<label for="name" class="cols-sm-2"><b>Username :</b></label>
						<div class="cols-sm-10">
							<div class="input-group">
								<input type="text" class="form-control" name="username" id="name"  placeholder="Enter Username" required/>
							</div>
						</div>
					</div>

					<div class="form-group">
						<label for="password" class="cols-sm-2"><b>Password </b></label>
						<div class="cols-sm-10">
							<div class="input-group">
								<input type="password" class="form-control" name="password" id="txtPassword"  placeholder="Enter your Password" title="Password must contain: Minimum 8 characters atleast 1 Alphabet and 1 Number"
                                    required pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$"/>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label for="confirm" class="cols-sm-2"><b>Confirm Password</b></label>
						<div class="cols-sm-10">
							<div class="input-group">
								<input type="password" class="form-control" name="passwordConf" id="txtConfirmPassword"  placeholder="Confirm your Password"/>
							</div>
						</div>
					</div>
					<div class="form-group ">
						<button type="submit" class="btn btn-primary"> Sign Up </button>
					</div>
				</form>
				<br>
			</div>

			<div class="col-lg-3">
			</div>
		</div>
		
		
