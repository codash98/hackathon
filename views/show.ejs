<div id="wrapper">
	<div class="container-fluid bs-example" id="leftform">
	    <div id="myCarousel" class="carousel slide" data-ride="carousel">
	        <!-- Carousel indicators -->
	        <ol class="carousel-indicators">
	            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
	            <li data-target="#myCarousel" data-slide-to="1"></li>
	            <li data-target="#myCarousel" data-slide-to="2"></li>
	        </ol>   
	        <!-- Wrapper for carousel items -->
	        <div class="carousel-inner">
	            <div class="item active">
	                <img src="/hotel2/hotel-avalon-taj-agra-93394937907-jpeg-fs.jpg" alt="First Slide">
	                <div class="carousel-caption">
                          <h3>Bedroom</h3>
                    </div>
	            </div>
	            <div class="item">
	                <img src="/hotel2/hotel-avalon-taj-agra-reception-28591931fs.jpg" alt="Second Slide">
	                <div class="carousel-caption">
                          <h3>Reception</h3>
                    </div>
	            </div>
	            <div class="item">
	                <img src="/hotel2/hotel-avalon-taj-agra-lobby-28591951fs.jpg" alt="Third Slide">
	                <div class="carousel-caption">
                          <h3>Lobby</h3>
                    </div>
	            </div>
	        </div>
	        <!-- Carousel controls -->
	        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
	            <span class="glyphicon glyphicon-chevron-left"></span>
	        </a>
	        <a class="carousel-control right" href="#myCarousel" data-slide="next">
	            <span class="glyphicon glyphicon-chevron-right"></span>
	        </a>
	    </div>	    
	</div>
	<div class="container-fluid" style="width: 40%; margin: 20px;"  id="rightform">
		<div style="background-color: #F8F8F8; padding: 0px; margin: 20px;">
			<span class="glyphicon glyphicon-log-in" style="padding: 15px" aria-hidden="true"></span>
	        <label>Check in</label>
	        <span class="cit-text" style="padding: 10px">11:00 AM</span>
	        <span class="glyphicon glyphicon-resize-horizontal" style="padding: 15px" aria-hidden="true"></span> 	
	        <span class="glyphicon glyphicon-log-in" style="padding: 15px" aria-hidden="true"></span>                  
	        <label>Check out</label>
	        <span class="cit-text" style="padding: 10px">9:00 AM</span>
	    </div>
		<form action="/irctcTourism/booking" method="POST" style="padding-left: 40px">
	            	<div class="row">
		                <div class="form-group col-sm-8">
		                	<label for="inputCity">City</label>
		                    <input class="form-control" type="text" name="city" placeholder="city" id="inputCity" value="<%= resthouse.city %>">
		                </div>
	                </div>
	                <div class="row">
		                <div class="form-group col-sm-4">
		        			<label for="inputCheckIn" for="inputCheckIn">Check In Date</label>
		        			<input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control" min="2018/04/28" name="checkInDate" id="inputCheckIn" placeholder="Check In" required="true">
		    			</div>
		    			<div class="form-group col-sm-4">
		        			<label for="inputCheckOut" for="inputCheckOut">Check Out Date</label>
		        			<input type="text" onfocus="(this.type='date')" onblur="(this.type='text')" class="form-control"  id="inputCheckOut" name="checkOutDate" placeholder="Check Out" required="true">
		    			</div>
	    			</div>
	    			<div class="row">
		    			<div class="form-group col-sm-4">
		    				<label for="roomType">Type</label>
		    				<select class="form-control" id="roomType">
		      					<option>AC</option>
		      					<option>Non AC</option>
		      				</select>
		      			</div>
		   				<div class="form-group col-sm-4">
		    				<label for="inputGuests">No. of Guests</label>
							<input id="inputGuests"  type="number" min="1" class="form-control" placeholder="No. of Guests" required="true" name="guestNo">
						</div>
					</div>
					<div class="row">
	                	<div class="form-group">
	                    	<button class="btn btn-lg btn-primary col-sm-8">Book Resthouse</button>
	                	</div>
	                </div>
	    </form>             
	</div>
</div>
